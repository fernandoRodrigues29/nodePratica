<!DOCTYPE html>
<html lang="pt-br">
<head>
	<title>Princial</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <div class="starter-template">
        <h1>Bootstrap starter template </h1>
        <form action="/add" method="post">
        	<legend>Incluir novo Registro</legend>
        	<div class="input-group">
        	<input type="text" name="title" placeholder="Titulo">
        	</div>
        	<div class="input-group">
        	<textarea name="description" id="" cols="30" rows="10" placeholder="descrição"></textarea>
        	</div>
        	<div class="input-group">
        	<button>Adicionar</button>
        	</div>
        </form>
        
        <p><%= title %></p>

        <table class="table table-striped">
    <thead>
      <tr>
        <th>a</th>
        <th>b</th>
        <th>c</th>
        <th>d</th>
        <th>f</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0;i<task.length;i++){ %>
      <tr>
        <td><%=i+1%><%= task[i].title %></td>
        <td><a href="/turn/<%= task[i]._id %>"><%= task[i].status ? 'ok' : 'não ok'%></a></td>
        <td><%= task[i].description %></td>
        <td><a href="/del/<%= task[i]._id %>">x</a></td>
        <td><a href="/editar/<%= task[i]._id %>">atualizar</a></td>
      </tr>
      <% } %>
    </tbody>
  </table>
      </div>

    </div>

 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</body>
</html>
